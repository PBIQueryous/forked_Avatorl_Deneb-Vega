{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "County Unemployment",
  "width": 960,
  "height": 500,
  "padding": {"top": 30},
  "background": "white",
  "autosize": "none",
  "signals": [
    {"name": "scale", "value": 900},
    {"name": "zoom", "value": 3},
    {
      "name": "county",
      "value": "0",
      "on": [
        {
          "source": "shape-county",
          "events": "@shape-county:pointermove",
          "update": "datum.id",
          "force": true
        }
      ]
    },
    {
      "name": "cloned",
      "value": null,
      "on": [{"events": "pointermove", "update": "copy('projection')"}]
    },
    {
      "name": "start",
      "value": [-124, 26],
      "on": [{"events": "pointermove", "update": "invert(cloned, xy())"}]
    },
    {
      "name": "start2",
      "value": [-124, 26],
      "on": [
        {"events": "pointermove", "update": "data('counties-2')[0]['centroid']"}
      ]
    },
    {
      "name": "mousePositionXY",
      "value": [82, 454],
      "on": [{"events": "pointermove", "update": "xy()"}]
    }
  ],
  "data": [
    {
      "name": "unemp",
      "url": "https://vega.github.io/vega/data/unemployment.tsv",
      "format": {"type": "tsv", "parse": "auto", "delimiter": "\t"}
    },
    {
      "name": "counties",
      "url": "https://vega.github.io/vega/data/us-10m.json",
      "format": {"type": "topojson", "feature": "counties"},
      "transform": [
        {
          "type": "lookup",
          "from": "unemp",
          "key": "id",
          "fields": ["id"],
          "values": ["rate"]
        },
        {
          "type": "formula",
          "expr": "invert(cloned, geoCentroid('projection', datum))",
          "as": "centroid"
        },
        {"type": "filter", "expr": "datum.rate != null"}
      ]
    },
    {
      "name": "counties-2",
      "source": "counties",
      "transform": [{"type": "filter", "expr": "datum.id==county"}]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "mercator",
      "scale": {"signal": "scale"},
      "center": [{"signal": "-95"}, {"signal": "38"}],
      "translate": [{"signal": "width/2"}, {"signal": "height/2"}]
    },
    {
      "name": "projection2",
      "type": "mercator",
      "scale": {"signal": "scale*zoom"},
      "rotate": [0, 0, 0],
      "center": [{"signal": "start2[0]"}, {"signal": "start2[1]"}],
      "translate": [{"signal": "75"}, {"signal": "100"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain": [0, 0.15],
      "range": {"scheme": "blues", "count": 7}
    }
  ],
  "legends": [
    {
      "fill": "color",
      "orient": "bottom-right",
      "title": "Unemployment",
      "format": "0.1%"
    }
  ],
  "marks": [
    {
      "name": "shape-county",
      "interactive": true,
      "type": "shape",
      "from": {"data": "counties"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "rate"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "type": "group",
      "encode": {
        "enter": {
          "width": {"signal": "150"},
          "height": {"signal": "150"},
          "clip": {"signal": "true"},
          "fillOpacity": {"value": 0.7},
          "cornerRadius": {"signal": "100"},
          "strokeWidth": {"signal": "0.5"},
          "stroke": {"signal": "'#BBBBBB'"},
          "fill": {"signal": "'white'"}
        },
        "update": {
          "x": {"signal": "mousePositionXY[0]"},
          "y": {"signal": "mousePositionXY[1]"}
        }
      },
      "marks": [
        {
          "name": "shape-county-2",
          "type": "shape",
          "from": {"data": "counties-2"},
          "encode": {
            "enter": {
              "fill": {"scale": "color", "field": "rate"},
              "stroke": {"value": "white"}
            }
          },
          "transform": [{"type": "geoshape", "projection": "projection2"}]
        },
        {
          "type": "text",
          "from": {"data": "shape-county-2"},
          "encode": {
            "update": {
              "fontSize": {"value": 16},
              "fontWeight": {"value": "bold"},
              "align": {"value": "center"},
              "fill": {"value": "black"},
              "stroke": {"value": "white"},
              "strokeWidth": {"value": 0},
              "text": {
                "signal": "'County '+datum.datum.id+'/'+format(datum.datum.rate, '0.1%')"
              },
              "lineBreak": {"value": "/"},
              "x": {"signal": "75"},
              "y": {"signal": "40"}
            }
          }
        }
      ]
    }
  ]
}
